#!/bin/bash


cat $pathToGitRoot/src/emmet.js | sed 1d > $pathToGitRoot/emmet.full.js
echo -e "\n" >> ./emmet.full.js
cat $pathToGitRoot/src/data.js | sed 1d  >> $pathToGitRoot/emmet.full.js
echo -e "\n" >> ./emmet.full.js
cat $pathToGitRoot/src/fsm.js  | sed 1d  >> $pathToGitRoot/emmet.full.js
echo -e "\n" >> ./emmet.full.js
cat $pathToGitRoot/src/node.js | sed 1d  >> $pathToGitRoot/emmet.full.js
echo -e "\n" >> $pathToGitRoot/emmet.full.js
cat .$pathToGitRoot/src/pn.js   | sed 1d  >> $pathToGitRoot/emmet.full.js


java -jar /usr/share/yui-compressor/yui-compressor.jar $pathToGitRoot/emmet.full.js -o $pathToGitRoot/emmet.min.js

echo 'No update min.js' > $pathToGitRoot/post-commit.lock

git commit -m 'update min.js' $pathToGitRoot/emmet.min.js

rm $pathToGitRoot/post-commit.lock

